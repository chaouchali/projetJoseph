{% extends 'base.html.twig' %}

{% block title %}Vos Produitts!
{% endblock %}

{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Ajouter un produit</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">ADMIN</a>
							</li>
							<li class="breadcrumb-item active">Produit</li>
                            <li class="breadcrumb-item active">Ajouter un produit</li>


						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Ajouter un produit</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form) }}
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nom produit</label>
                    {{form_widget(form.nom,{'attr':{'class': 'form-control'}})}}
                  </div>
                  <div class="form-group">
                <label for="exampleInputEmail1">Prix produit</label>
                {{form_widget(form.prix,{'attr':{'class': 'form-control'}})}}
              </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">QTE stock produit</label>
                    {{form_widget(form.stock,{'attr':{'class': 'form-control'}})}}
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
            <!-- /.card -->


          </div>
          <!--/.col (left) -->
          
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>

	</div>
{% endblock %}
